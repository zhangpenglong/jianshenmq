.doc-listform{
  width:100%;background:#fff;border-bottom:1px solid #ddd;border-top:1px solid #ddd;
}
.doc-listformflex{
  background:#fff;width:97.5%;height:50px;line-height: 50px;
  border-bottom:1px solid #ddd;margin-left:2.5%;display:-webkit-box;display:-webkit-flex;display:flex;
}
.doc-listformflex>view{ -webkit-box-flex:1;-webkit-flex:1;flex:1}
.doc-listformflex:last-child{
  border:none;
}

.doc-listformflex input{
  display:inline-block;width:95%;margin-right:5%;height:50px;line-height: 50px;text-align: right;
}
.doc-listformflex picker{
  width:100%;height:50px;line-height: 50px;text-align: right; display: inline-block;
}
.doc-listformflex picker .pickerInput{
  color:#000;
}

